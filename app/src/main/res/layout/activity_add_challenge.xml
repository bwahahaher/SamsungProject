<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addChallenge">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="84dp"
        android:hint="Название вызова"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="39dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/hard"
        android:layout_width="111dp"
        android:layout_height="18dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="68dp"
        android:text="Сложность"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4">

    </TextView>

    <TextView
        android:id="@+id/hard2"
        android:layout_width="168dp"
        android:layout_height="21dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="36dp"
        android:text=" длительность"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="161dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hard2">

        <ImageButton
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="minus"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="14" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=" дней" />

        <ImageButton
            android:id="@+id/imageView12"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="plus"
            app:srcCompat="@android:drawable/ic_media_ff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hard">

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:onClick="setF"

            android:layout_weight="1"
            android:background="@drawable/one"
            android:button="@drawable/emoji"
            app:srcCompat="@drawable/one" />

        <CheckBox
            android:id="@+id/c2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/two"

            android:button="@drawable/emoji"
            android:onClick="setF" />

        <CheckBox
            android:id="@+id/c3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/three"
            android:onClick="setF"

            android:button="@drawable/emoji" />

        <CheckBox
            android:id="@+id/c4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:onClick="setF"

            android:background="@drawable/four"
            android:button="@drawable/emoji" />

        <CheckBox
            android:id="@+id/c5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:onClick="setF"
            android:layout_weight="1"
            android:background="@drawable/five"
            android:button="@drawable/emoji" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="401dp"
        android:layout_height="382dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="201dp"
                android:layout_height="44dp"
                android:gravity="start|top"
                android:hint="Заметка / Описание" />
        </com.google.android.material.textfield.TextInputLayout>

    </ScrollView>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="add"
        android:text="Добавить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>