<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOr"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="687dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp">

        <fragment
            android:id="@+id/fragment"
            android:name="com.example.samsungproject.fragments.nullFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="2dp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:text="Главная"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/threeBack"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/new_act"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="fragment"
            android:padding="0px"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="fragment"
            android:background="@null"
            android:padding="0px"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/goals" />
        <ImageButton
            android:id="@+id/mainButton"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="fragment"
            android:padding="0px"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home1" />



        <ImageButton
            android:id="@+id/challenge"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="fragment"
            android:padding="0px"
            android:scaleType="fitCenter"
            android:background="@null"
            android:text="челл"
            app:srcCompat="@drawable/fire" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:onClick="fragment"
            android:padding="0px"
            android:scaleType="fitCenter"
            android:background="@null"
            app:srcCompat="@drawable/profileimg1" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>